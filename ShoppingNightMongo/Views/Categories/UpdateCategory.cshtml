@model ShoppingNightMongo.Dtos.CategoryDtos.GetCategoryByIdDto
@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h3 class="mb-4">Kategori Güncelle</h3>

    <form method="post">
        <input type="hidden" asp-for="CategoryId" />

        <div class="form-group mb-3">
            <label asp-for="CategoryName" class="form-label">Kategori Adı</label>
            <input asp-for="CategoryName" class="form-control" placeholder="Kategori adını giriniz" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Title" class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" placeholder="Başlık giriniz" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Görsel bağlantısını giriniz" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Kategori Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </form>
</div>