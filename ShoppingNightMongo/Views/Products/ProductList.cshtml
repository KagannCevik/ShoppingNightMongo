@model List<ShoppingNightMongo.Dtos.ProductDtos.ProductWithCategoryDto>
@{
    ViewData["Title"] = "Ürün Listele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="table table-hover">
        <tr>
            <th>Ürün Id</th>
            <th>Ürün Adı</th>
            <th>Ürün Fiyatı</th>
            <th>Stok Sayısı</th>
            <th>Ürün Kategori</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
                <td>@item.StockCount</td>
                <td>@item.CategoryName</td>
               
                
                <td>
                    <a href="/Products/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/Products/UpdateProduct/@item.ProductId" class="btn btn-info">Güncelle</a>
                </td>
            </tr>
        }
    </table>
    <a href="/Products/CreateProduct/" class="btn btn-danger">
        Yeni Ürün Ekle
    </a>
</div>