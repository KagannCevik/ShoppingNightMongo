@model ShoppingNightMongo.Dtos.ProductDtos.CreateProductDto
@{
    Layout = null;
}

<!DOCTYPE html>

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
    <form method="post">
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Ürün Fiyatı </label>
        <input type="text" asp-for="ProductPrice" class="form-control" />
        <br />
        <label>Ürün Görsel</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <label>Ürün Stok Sayısı Adı</label>
        <input type="text" asp-for="StockCount" class="form-control" />
        <br />
        <label>Ürün Kategorisi Adı</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.v">
            <option value="">--Kategori Seçiniz--</option>
        </select>
        <br />
        <br />
        <button class="btn btn-success">Yeni Ürün Ekle </button>

    </form>
</div>
