@model List<ShoppingNightMongo.Dtos.SliderDtos.ResultSliderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<h4 class="page-title">Slider İşlemleri</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Slider Bilgileri</div>
            </div>
            <div class="card-body">
                <div class="card-sub">
                    Aşağıda slider bilgilerini görüntüleyebilir ve işlemlerinizi gerçekleştirebilirsiniz.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Başlık</th>
                            <th scope="col">Alt Başlık</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <th>@item.Title</th>
                                <th>@item.SubTitle</th>
                                <th><a href="/Slider/DeleteSlider/@item.SliderId" class="btn btn-danger">Sil</a></th>
                                <th><a href="/Slider/UpdateSlider/@item.SliderId" class="btn btn-success">Güncelle</a></th>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Slider/CreateSlider/" class="btn btn-info">Yeni Slider Bilgisi Ekle</a>
            </div>
        </div>
    </div>
</div>
